<div class="container">

<ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#sectionA">All Speakers</a></li>
        <li><a data-toggle="tab" href="#sectionB">All Messages</a></li>

</ul>
    <div class="tab-content">
        <div id="sectionA" class="tab-pane fade in active">
<hr/>

              <% @speakers.each do |speaker| %>
              <div><%= gravatar_for speaker, size: 100 %>
            <h3><%= link_to speaker.name, speaker_path(speaker) %></h3>
            </div>


            <% end %>

        </div>
        <div id="sectionB" class="tab-pane fade">
<hr/>

            <% @messages.each do |message| %>
            <!-- <div><%= gravatar_for message.speaker, size: 100 %>
            <h3>Speaker Name: <%= message.speaker.name %></h3>
            </div> -->
              <div class="col-md-4">
                <div class="message">
                  <h2 class="message-title"> <%= message.title %> </h2>
                  <%= link_to "View Message", message_path(message), class: "btn btn-default" %>
                </div>

              </div>

            <% end %>



        </div>


    </div>
</div>

